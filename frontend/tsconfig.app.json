{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"compilerOptions": {
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"moduleResolution": "node" // for @vue-dapp Could not find a declaration file for module
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"]
}
