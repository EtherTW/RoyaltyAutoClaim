{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"compilerOptions": {
		"lib": ["ESNext"],

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"moduleResolution": "node", // for @vue-dapp Could not find a declaration file for module
		"verbatimModuleSyntax": false // no need to distinguish between type or value during import
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "test/**/*.test.ts"]
}
